@model SUBDCORE.Models.LoanRepayment

@{
    ViewData["Title"] = "Index";
}

<h1>Select Credit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreaditId" class="control-label"></label>
                <select asp-for="CreaditId" class="form-control" asp-items="ViewBag.CreaditId"></select>
            </div>            
            <div class="form-group">
                <input type="submit" value="Go to repayments" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
