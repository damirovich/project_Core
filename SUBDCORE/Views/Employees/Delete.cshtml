@model SUBDCORE.Models.Employees

@{
    ViewData["Title"] = "Delete";
}

<h4>Вы действительно хотите удалить этого сотрудника ?</h4>
<div>
    <table class="table">
        <tr>
            <td>
                <label>ФИО</label>
                <h5>
                    @Html.DisplayFor(model => model.FullName)
                </h5>
            </td>
            <td>
                <label>Должность</label>
                <h5>
                    @Html.DisplayFor(model => model.PositionNavigation.Position1)
                </h5>
            </td>
            <td>
                <label>Оплата</label>
                <h5>
                    @Html.DisplayFor(model => model.Salary)
                </h5>
            </td>
            <td>
                <label>Адрес проживания</label>
                <h5>
                    @Html.DisplayFor(model => model.Address)
                </h5>
            </td>
            <td>
                <label>Номер телефона</label>
                <h5>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </h5>
            </td>
        </tr>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEmployees" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <div>
        <a asp-action="Index">Вернуться назад</a>
    </div>
</div>
